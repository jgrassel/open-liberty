<server description="EMFFailoverOnAppStartServer">

    <featureManager>
        <feature>servlet-4.0</feature>
        <feature>jpa-2.2</feature>
        <feature>componenttest-1.0</feature>
    </featureManager>
    
    <include location="../fatTestPorts.xml"/>
    
    <jpa defaultJtaDataSourceJndiName="jdbc/JTA_DS" defaultNonJtaDataSourceJndiName="jdbc/NJTA_DS" />
    
    <dataSource id="jdbc/JTA_DS" jndiName="jdbc/JTA_DS" >
            <jdbcDriver libraryRef="DerbyLib"/>
            <properties.derby.client databaseName="memory:ds1" createDatabase="create" 
                                     serverName="${derbyserver.hostname}" portNumber="${derbyserver.port}"
                                     user="dbuser1" password="{xor}Oz0vKDtu" />
    </dataSource>
    
    <dataSource id="jdbc/NJTA_DS" jndiName="jdbc/NJTA_DS" transactional="false" >
            <jdbcDriver libraryRef="DerbyLib"/>
            <properties.derby.client databaseName="memory:ds1" createDatabase="create" 
                                     serverName="${derbyserver.hostname}" portNumber="${derbyserver.port}"
                                     user="dbuser1" password="{xor}Oz0vKDtu" />
    </dataSource>
        
    <library id="DerbyLib" fat.modify="true">
        <fileset dir="${shared.resource.dir}/derby" includes="derby.jar, derbynet.jar, derbyclient.jar"/>
    </library>
    
    <javaPermission codebase="${shared.resource.dir}/derby/derby.jar" className="java.security.AllPermission"/>
    <javaPermission codebase="${shared.resource.dir}/derby/derbyclient.jar" className="java.security.AllPermission"/>
    <javaPermission codebase="${shared.resource.dir}/derby/derbynet.jar" className="java.security.AllPermission"/>
</server>